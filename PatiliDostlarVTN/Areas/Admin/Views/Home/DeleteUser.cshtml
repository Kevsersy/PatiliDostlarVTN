@model AppUser

<h2 class="text-center mt-4 text-danger">Kullanıcıyı Sil</h2>

<div class="card shadow-lg p-4">
    <div class="card-body text-center">
        <h4 class="text-warning">Bu kullanıcıyı silmek istediğinizden emin misiniz?</h4>
        <p><strong>ID:</strong> @Model.Id</p>
        <p><strong>Kullanıcı Adı:</strong> @Model.UserName</p>
        <p><strong>E-posta:</strong> @Model.Email</p>

        <form asp-action="DeleteUserConfirmed" asp-controller="Home" method="post">
            <input type="hidden" name="userId" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Evet, Sil</button>
            <a asp-action="Users" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>
