@model UserRolesVM

<form asp-action="AssignRoles" method="post">
    <div asp-validation-summary="ModelOnly"></div>

    <input asp-for="Id" type="hidden" />

    @for (int i = 0; i < Model.Roles.Count(); i++)
    {
        <input asp-for="Roles[i].IsAssigned" />
        <label asp-for="Roles[i].IsAssigned">@Model.Roles[i].RoleName</label>
        <input asp-for="Roles[i].RoleId" type="hidden" />
        <input asp-for="Roles[i].RoleName" type="hidden" />
    }

    <button type="submit" class="btn btn-success">Assign Roles</button>
</form>